<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragment.bottomshit.MealBottomSheetFragment">

    <ImageView
        android:id="@+id/imageCategory"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_meal_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageCategory"
        app:layout_constraintTop_toTopOf="@id/imageCategory">

        <TextView
            android:id="@+id/TextMealCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/g_black"
            app:drawableLeftCompat="@drawable/ic_area" />

        <TextView
            android:id="@+id/textMealCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/g_black"
            app:drawableLeftCompat="@drawable/ic_category" />
    </LinearLayout>

    <TextView
        android:id="@+id/textMealNameBottomShit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/g_black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toEndOf="@id/imageCategory"
        app:layout_constraintTop_toBottomOf="@id/linear_meal_info" />

    <TextView
        android:id="@+id/textReedMoreBottomShit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/g_black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toEndOf="@id/imageCategory"
        app:layout_constraintTop_toBottomOf="@id/textMealNameBottomShit" />

</androidx.constraintlayout.widget.ConstraintLayout>
